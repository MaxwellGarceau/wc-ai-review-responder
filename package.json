{
	"name": "wc-ai-review-responder",
	"version": "0.1.0",
	"author": "The WordPress Contributors",
	"license": "GPL-3.0+",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --blocks-manifest",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:php": "composer phpcs",
		"fix:php": "composer phpcbf",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start",
		"postinstall": "composer install",
		"dev": "wp-env start",
		"dev:stop": "wp-env stop",
		"dev:reset": "wp-env clean all && wp-env start",
		"logs:docker": "wp-env logs",
		"logs:wp": "wp-env run cli cat /var/www/html/wp-content/debug.log",
		"logs:wp:clear": "wp-env run cli sh -c \"echo '' > /var/www/html/wp-content/debug.log\"",
		"cli": "wp-env run cli wp --",
		"test": "wp-env run tests-cli --env-cwd=wp-content/plugins/wc-ai-review-responder ./vendor/bin/phpunit",
		"test:watch": "wp-env run tests-cli --env-cwd=wp-content/plugins/wc-ai-review-responder ./vendor/bin/phpunit --watch",
		"test:coverage": "wp-env run tests-cli --env-cwd=wp-content/plugins/wc-ai-review-responder ./vendor/bin/phpunit --coverage-html coverage",
		"test-ai": "wp-env run cli wp ai-review test",
		"test-ai-review": "wp-env run cli wp ai-review test",
		"test:unit": "wp-scripts test-unit-js"
	},
	"dependencies": {
		"@woocommerce/components": "latest",
		"@wordpress/hooks": "latest",
		"@wordpress/i18n": "latest"
	},
	"devDependencies": {
		"@woocommerce/dependency-extraction-webpack-plugin": "latest",
		"@woocommerce/eslint-plugin": "latest",
		"@wordpress/prettier-config": "latest",
		"@wordpress/scripts": "latest",
		"raw-loader": "^4.0.2",
		"typescript": "^5.4.5"
	}
}
